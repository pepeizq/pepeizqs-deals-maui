<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pepeizqs_deals_maui.MainPage">

    <ScrollView Background="{StaticResource fondoCuerpo}">
        <VerticalStackLayout>
            <Border Stroke="{StaticResource fondoOscuro}" StrokeThickness="1" Padding="16,8" HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5" />
                </Border.StrokeShape>

                <Border.Shadow>
                    <Shadow Brush="{StaticResource sombra}" Offset="0,2" Radius="5" Opacity="0.25" />
                </Border.Shadow>

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource fondoMinimo}" Offset="0.0" />
                        <GradientStop Color="{StaticResource fondoOscuro}" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>

                <VerticalStackLayout x:Name="spNoticias" Padding="20" Spacing="30"/>
            </Border>
            
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
